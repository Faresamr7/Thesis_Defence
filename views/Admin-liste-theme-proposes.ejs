<main id="main" class="main">
  <div class="pagetitle">
    <h1>Thème</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="/admin/proposed-theses">Thèmes Proposés</a>
        </li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h3 class="mt-4">La liste des Thèmes proposés par les enseignants</h3>
          <p class="mt-3">
            Dans cette liste, vous pouver consulter les thèmes proposés par les
            enseignants qui sont pas encore affectés à des binômes
          </p>

          <!-- Table with stripped rows -->
          <table class="table datatable">
            <thead>
              <tr>
                <th scope="col">Enseignant</th>
                <th scope="col">Intitulé</th>
                <th scope="col">Description</th>
                <th scope="col">Domaine</th>
                <th scope="col">Spécialité</th>
              </tr>
            </thead>
            <tbody>
              <% if (professors.length > 0 ) { %> <% professors.forEach(function(professor){ %>
                <tr style="margin: 0 auto;">
                  <td><%= `${professor.firstName} ${professor.lastName}` %></td>
                  <td><%= professor.thesis %></td>
                  <td>
                    <%= professor.description %>
                  </td>
                  <td><%= professor.field %></td>
                  <td><%= professor.speciality %></td>
                </tr>
                <% }); %> 
                <% } %>
            </tbody>
          </table>
          <!-- End Table with stripped rows -->    
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
