<main id="main" class="main">
  <div class="pagetitle">
    <h1>Etudiant</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="/admin/students">Etudiants</a>
        </li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <a
            href="/admin/student"
            style="position: absolute; right: 60px;"
            class="mt-4"
          >
            <button class="btn btn-success fs-5">
              <i class="bi bi-plus-circle"></i>
              Ajouter
            </button>
          </a>
          <h3 class="mt-4">La liste des etudiants</h3>
          <p>Vous pouver consulter, modifier et supprimer tous les etudiants</p>

          <!-- Table with stripped rows -->
          <table class="table datatable">
            <thead>
              <tr>
                <th scope="col">Matricule</th>
                <th scope="col">Nom Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">spécialité</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (students.length > 0 ) { %> <% students.forEach(function(student){ %>
              <tr>
                <td scope="row"><%= student.matricule%></td>
                <td><%= `${student.firstName} ${student.lastName}` %></td>
                <td><%= student.email%></td>
                <td><%= student.speciality ? student.speciality.title : '/'%></td>
                <td>
                  <div
                    class="btn-group"
                    role="group"
                    aria-label="Basic outlined example"
                  >
                  <a href="/admin/student/<%= student._id %>"><button type="button" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></button></a>
                    <button
                      type="button"
                      class="btn btn-outline-danger deleteButtonConf"
                      style="margin-left: 5px !important;"
                    >
                      <a href="Admin-supprimer-etudiant.html">
                        <i class="bi bi-trash text-danger"></i>
                      </a>
                    </button>
                  </div>
                </td>
              </tr>
              <% }); %> 
              <% } %>
            </tbody>
          </table>
          <!-- End Table with stripped rows -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
