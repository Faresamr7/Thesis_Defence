<main id="main" class="main">
  <div class="pagetitle">
    <h1>Enseignants</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/professors">Enseignants</a>
        </li>
        <li class="breadcrumb-item active">Ajouter</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Ajouter un nouvel enseignant</h2>

          <!-- No Labels Form -->
          <form
            class="row g-3 needs-validation add-professor-form"
            novalidate
          >
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                placeholder="Prenom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un pr√©nom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                placeholder="Nom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un nom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Email"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir une adresse email valide.
              </div>
            </div>


            <div class="col-md-6">
              <div>
                <select
                  class="form-select form-control"
                  aria-label="Default select example"
                  name="grade"
                >
                  <option selected>
                    Ouvrir pour selectionner un grade
                  </option>
                  <option value="PHD">PHD</option>
                  <option value="MCB">MCB</option>
                  <option value="MCA">MCA</option>
                  <option value="PR">Pr</option>
                  <option value="MAA">MAA</option>
                  <option value="MAB">MAB</option>
                </select>
              </div>
            </div>
            <div class="col-md-12">
              <div>
                <select
                  class="form-select"
                  multiple
                  aria-label="multiple select example"
                  name="fields" id="fields"
                >  
                  <option selected>Domaine d'expertise</option>
                  <% if (fields.length > 0 ) { %> <%
                    fields.forEach(function(field){ %>
                    <option value="<%= field._id %>">
                      <%= field.title %>
                    </option>
                    <% }); %> <% } %> 
                </select>
              </div>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary" id="add-professor-btn">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
