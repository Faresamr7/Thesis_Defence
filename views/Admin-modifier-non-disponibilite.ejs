<main id="main" class="main">
  <div class="pagetitle">
    <h1>Enseignants</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/non-availibilities">Non-Disponibilité</a>
        </li>
        <li class="breadcrumb-item active">Modifier</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-5 mt-4">
            Modifier une période de non-disponibilité pour un enseignant
          </h2>

          <!-- No Labels Form -->
          <form
            class="row g-3 needs-validation update-nonAv-form"
            novalidate
          >
            <div class="row col-md-12">
              <div class="col-md-6">
                <label for="startDay"><em>Date de Debut :</em></label>
                <input
                  type="date"
                  class="form-control"
                  id="startDay"
                  name="startDay"
                  value="<%= nonAv.startDay.toISOString().slice(0, 10) %>"
                  placeholder="Prenom"
                  required
                />
                <div class="invalid-feedback">
                  Veuillez fournir la date de Debut de la période.
                </div>
              </div>
              <div class="col-md-6">
                <label for="endDay"><em>Date de Fin :</em></label>
                <input
                  type="date"
                  class="form-control"
                  id="endDay"
                  name="endDay"
                  value="<%= nonAv.endDay.toISOString().slice(0, 10) %>"
                  placeholder="Prenom"
                  required
                />
                <div class="invalid-feedback">
                  Veuillez fournir la date de fin de la période.
                </div>
              </div>
            </div>
            <div class="row col-md-12 p-4">
              <label for="professor"><em>Enseignant :</em></label>
              <select
                class="form-select form-control"
                aria-label="Default select example"
                id="professor"
                name="professor"
              >
              <option value="<%= professor[0]._id %>"><%= `${professor[0].firstName} ${professor[0].lastName}` %></option>
              </select>
              <div class="invalid-feedback">
                Veuillez choisir un enseignant.
              </div>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary update-nonAv-btn" data-nonAv-id = "<%= nonAv._id %>">submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
