<main id="main" class="main">
  <div class="pagetitle">      
    <h1>Mes Thèmes</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/binome">Accueil</a></li>
        <li class="breadcrumb-item active">Mes Thèmes</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->  
  <section class="section">

      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">

              <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="sel-tab" data-bs-toggle="tab" data-bs-target="#selT" type="button" role="tab" aria-controls="selT" aria-selected="true">Les thèmes sélectionnées</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="app-tab" data-bs-toggle="tab" data-bs-target="#appT" type="button" role="tab" aria-controls="appT" aria-selected="false">Les thèmes approuvées</button>
                </li>
             </ul>
              <div class="tab-content pt-2" id="myTabContent">
                <div class="tab-pane fade show active" id="selT" role="tabpanel" aria-labelledby="sel-tab">
                    <!--Selected thesis -->
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th>Thème</th>
                          <th>Description</th>
                          <th>Spécialité</th>
                          <th>Domaine</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (selectedTheses.length > 0 ) { %> <% selectedTheses.forEach(function(thesis , index){ %>
      
                        <tr>
                          <td><%= thesis.title %></td>
                          <td><%= thesis.description %></td>
                          <td><%= thesis.speciality.title %></td>
                          <td><%= thesis.field.title %></td>
                        </tr>
                        <% }); %> <% } else { %>
                          <% } %>
                      </tbody>
                    </table>
                </div>
                  <!--End Selected thesis -->

                <div class="tab-pane fade" id="appT" role="tabpanel" aria-labelledby="app-tab">
                    <!--Les thèmes approuvées-->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th>Thème</th>
                          <th>Description</th>
                          <th>Spécialité</th>
                          <th>Domaine</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(approvedThesis){ %>
                        <tr  style="background-color: rgb(87, 193, 87);">
                          <td><%= approvedThesis.title %></td>
                          <td><%= approvedThesis.description %></td>
                          <td><%= approvedThesis.speciality.title %></td>
                          <td><%= approvedThesis.field.title %></td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                    <!-- Fin thèmes approuvées-->
              </div>

              
  
              
            </div>
          </div>
        </div>


        
      </div>
    </section>
  </main>