<main id="main" class="main">
  <div class="pagetitle">
    <h1>Domaine</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/fields">Domaines</a>
        </li>
        <li class="breadcrumb-item active">Modifier</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Modifier un Domaine</h2>

          <!-- No Labels Form -->
          <form class="row g-3 needs-validation update-field-form" novalidate>
            <div class="col-md-12">
              <label for="title"><em>Intitulé du nouveau domaine</em></label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="<%= field.title %>"
                placeholder=""
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un intitulé de domaine.
              </div>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary update-field-btn" data-field-id = "<%= field._id %>">submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
