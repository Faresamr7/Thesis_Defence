<main id="main" class="main">
  <div class="pagetitle">
    <h1>Local</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/premises">Locaux</a>
        </li>
        <li class="breadcrumb-item active">Ajouter</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Ajouter un nouveau local</h2>

          <!-- No Labels Form -->
          <form class="row g-3 needs-validation add-premise-form" novalidate>
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Veuillez saisir le nom de la salle"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un le nom de salle.
              </div>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary" id="add-premise-btn">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
