<main id="main" class="main">
  <div class="pagetitle">
    <h1>Binômes</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="Admin-liste-etudiant.html">Etudiants</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/binomes">Binômes</a>
        </li>
        <li class="breadcrumb-item active">Ajouter</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Ajouter un nouveau Binome</h2>

          <!-- No Labels Form -->
          <form
            class="needs-validation row g-3 add-binome-form"
            novalidate
          >
            <div class="col-md-6">
              <div>
                <label for="etudiant1"><em>Etudiant1</em></label>
                <select
                  class="form-select form-control"
                  aria-label="Default select example"
                  id="etudiant1"
                  name="student1"
                  required
                >
                  <option selected>
                    Ouvrir pour selectionner un étudiant
                  </option>
                  <% if (students.length > 0 ) { %> <%
                    students.forEach(function(student){ %>
                    <option value="<%= student._id %>">
                      <%= `${student.firstName} ${student.lastName} | ${student.matricule}` %>
                    </option>
                    <% }); %> <% } %> 
                </select>
              </div>
            </div>
            <div class="col-md-6" id="etu2">
              <div>
                <label for="etudiant2"><em>Etudiant2</em></label>
                <select
                  class="form-select form-control"
                  aria-label="Default select example"
                  id="etudiant2"
                  name="student2"
                >
                  <option selected>
                    Ouvrir pour selectionner un étudiant
                  </option>
                  <% if (students.length > 0 ) { %> <%
                    students.forEach(function(student){ %>
                    <option value="<%= student._id %>">
                      <%= `${student.firstName} ${student.lastName} | ${student.matricule}` %>
                    </option>
                    <% }); %> <% } %> 
                </select>
              </div>
            </div>

            <div class="form-check" style="padding-left: 50px;">
              <input
                type="checkbox"
                class="form-check-input"
                id="binomeSwitch"
              />
              <label class="form-check-label" for="binomeSwitch">
                Monôme
              </label>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary" id="add-binome-btn">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
