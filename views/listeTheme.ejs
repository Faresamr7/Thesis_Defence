<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h2>La liste des thémes</h2>
            <table class="table datatable">
              <thead>
                <tr>
                  <th>Intitulé</th>
                  <th>Description</th>
                  <th>Spécialité</th>
                  <th>domaine</th>
                  <th>Option</th>
                </tr>
              </thead>
              <tbody>
                <% if (theses.length > 0 ) { %> <%
                theses.forEach(function(thesis){ %>
                <tr>
                  <td><%= thesis.title %></td>
                  <td>
                    <%= thesis.description %>
                  </td>
                  <td><%= thesis.speciality.title %></td>
                  <td><%= thesis.field.title %></td>
                  <td>
                    <i style="cursor: pointer; color: gray;" class="bi bi-pencil-square"></i>
                    <i style="cursor: pointer; color: red; margin-left: 3px;" class="bi bi-trash delete-thesis" data-thesis-id="<%= thesis._id %>" id="delete-thesis-<%= thesis._id %>"></i>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <div class="text-center text-danger">no entries found</div>
                <% } %>
              </tbody>
            </table>
            <div style="margin-left: 65%;">
              <button class="btn btn-primary">
                <a style="color: #f5f5f5;" href="/professor/add-thesis">
                  <i class="bi bi-plus-circle"></i>
                  Ajouter un théme
                </a>
              </button>
              <button class="btn btn-primary">Affecter thémes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
