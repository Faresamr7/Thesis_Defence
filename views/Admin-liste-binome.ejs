<main id="main" class="main">
  <div class="pagetitle">
    <h1>Bin么mes</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="Admin-liste-etudiant.html">Etudiants</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="Admin-liste-binome.html">Bin么mes</a>
        </li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <a
            href="/admin/binome"
            style="position: absolute; right: 60px;"
            class="mt-4"
          >
            <button class="btn btn-success fs-5">
              <i class="bi bi-plus-circle"></i>
              Ajouter
            </button>
          </a>
          <h3 class="mt-4">La liste des Bin么mes</h3>
          <p>Vous pouver consulter ou supprimer tous les binomes et mon么mes</p>

          <!-- Table with stripped rows -->
          <table class="table datatable">
            <thead>
              <tr>
                <th scope="col">Binome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Has a theme</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (binomes.length > 0 ) { %> <% binomes.forEach(function(binome){ %>
              <tr>
                <td><%= binome.userName %></td>
                <td><%= binome.email %></td>
                <td><%= binome.ApprovedThesis ? 'Yes' : 'No' %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-outline-danger deleteButtonConf"
                  >
                  <i  class="bi bi-trash delete-binome" data-binome-id="<%= binome._id %>" id="delete-binome-<%= binome._id %>"></i>
                </button>
                </td>
              </tr>
              <% }); %> 
              <% } %>
            </tbody>
          </table>
          <!-- End Table with stripped rows -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
