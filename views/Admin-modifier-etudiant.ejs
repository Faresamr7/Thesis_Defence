<main id="main" class="main">
  <div class="pagetitle">
    <h1>Etudiant</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/students">Etudiants</a>
        </li>
        <li class="breadcrumb-item active">Modifier</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Modifier les informations d'un étudiant</h2>

          <!-- No Labels Form -->
          <form
            class="row g-3 needs-validation update-student-form"
            novalidate
          >
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                value="<%= student.firstName %>"
                placeholder="Prenom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un prénom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                value="<%= student.lastName %>"
                placeholder="Nom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un nom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= student.email %>"
                placeholder="Email"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir une adresse email valide.
              </div>
            </div>
            <div class="col-md-6">
              <input
                type="text"
                class="form-control"
                id="matricule"
                name="matricule"
                value="<%= student.matricule %>"
                placeholder="Matricule"
              />
              <div class="invalid-feedback">
                Veuillez fournir un matricule.
              </div>
            </div>
            <div class="col-md-6">
              <div>
                <select
                  class="form-select form-control"
                  aria-label="Default select example"
                  name="speciality"
                >
                <% if(specialities.length > 0  ) { %> <% specialities.forEach(function(speciality){ %>
                  <% if(student.speciality) { %> 
                  <option value="<%= speciality._id %>" <%= speciality._id.toString() === student.speciality._id.toString() ? 'selected' : '' %> ><%= speciality.title %></option>
                  <% } else { %>
                    <option value="<%= speciality._id %>"><%= speciality.title %></option>
                    <% } %>
                  <% }); %> 
                  <% } %>
                </select>
              </div>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary update-student-btn" data-student-id = "<%= student._id %>">submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
