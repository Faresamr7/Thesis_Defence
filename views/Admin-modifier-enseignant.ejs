<main id="main" class="main">
  <div class="pagetitle">
    <h1>Enseignants</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/professors">Enseignants</a>
        </li>
        <li class="breadcrumb-item active">Modifier</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Modifier les informations d'un enseignant</h2>

          <!-- No Labels Form -->
          <form  class=" row g-3 needs-validation update-professor-form" novalidate>
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                value="<%= professor.firstName %>"
                placeholder="Prénom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un prénom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="text"
                class="form-control"
                id="lastName"
                value="<%= professor.lastName %>"
                name="lastName"
                placeholder="Nom"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un nom.
              </div>
            </div>
            <div class="col-md-12">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= professor.email %>"
                placeholder="Email"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir une adresse email valide.
              </div>
            </div>
            <div class="col-md-6">
              <div>
                <select
                  class="form-select form-control"
                  aria-label="Default select example"
                  id="grade"
                  name="grade"
                >
                  <option selected value="<%= professor.grade %>">
                    <%= professor.grade %>
                  </option>
                  <option value="PHD">PHD</option>
                  <option value="MCB">MCB</option>
                  <option value="MCA">MCA</option>
                  <option value="PR">Professor</option>
                </select>
              </div>
            </div>

            <div class="col-md-12">
              <div>
                <select
                  class="form-select"
                  multiple
                  aria-label="multiple select example"
                  id="fields"
                  name="fields"
                >
                  <% fields.forEach(function(field) { %>
                    <% if (professor.fields.some(profField => profField._id.toString() === field._id.toString())) { %>
                      <option value="<%= field._id %>" selected>
                        <%= field.title %>
                      </option>
                    <% } else { %>
                      <option value="<%= field._id %>">
                        <%= field.title %>
                      </option>
                    <% } %>
                  <% }); %>
                </select>
              </div>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary update-professor-btn" data-professor-id = "<%= professor._id %>">submit</button>
              <button type="reset" class="btn btn-secondary">reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
