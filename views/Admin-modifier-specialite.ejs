<main id="main" class="main">
  <div class="pagetitle">
    <h1>Spécialité</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/specialities">Spécialités</a>
        </li>
        <li class="breadcrumb-item active">Modifier</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4 mt-4">Modifier une spécialité</h2>

          <!-- No Labels Form -->
          <form class="row g-3 needs-validation update-speciality-form" novalidate>
            <div class="col-md-3">
              <label for="code"><em>Abreviation :</em></label>
              <input
                type="text"
                class="form-control"
                id="abbreviation"
                name="abbreviation"
                value="<%= speciality.abbreviation %>"
                placeholder="e.g : GL"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir une code de la spécialité.
              </div>
            </div>
            <div class="col-md-9">
              <label for="title"><em>Intitulé :</em></label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="<%= speciality.title %>"
                placeholder="e.g : Génie Logiciel"
                required
              />
              <div class="invalid-feedback">
                Veuillez fournir un le titre complet de la spécialité.
              </div>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary update-speciality-btn" data-speciality-id = "<%= speciality._id %>">submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
