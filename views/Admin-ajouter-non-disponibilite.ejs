<main id="main" class="main">
  <div class="pagetitle">
    <h1>Enseignants</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Accueil</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/non-availibilities">Non-Disponibilité</a>
        </li>
        <li class="breadcrumb-item active">Ajouter</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-5 mt-4">
            Ajouter une non-disponibilité pour un enseignant
          </h2>

          <!-- No Labels Form -->
          <form class="row g-3 needs-validation add-non-availibility-form" novalidate>
            <div class="row col-md-12">
              <div class="col-md-6">
                <label for="startDay"><em>Date de Debut :</em></label>
                <input
                  type="date"
                  class="form-control"
                  id="startDay"
                  name="startDay"
                  placeholder="Prenom"
                  required
                />
                <div class="invalid-feedback">
                  Veuillez fournir la date de Debut de la période.
                </div>
              </div>
              <div class="col-md-6">
                <label for="endDay"><em>Date de Fin :</em></label>
                <input
                  type="date"
                  class="form-control"
                  id="endDay"
                  name="endDay"
                  placeholder="Prenom"
                  required
                />
                <div class="invalid-feedback">
                  Veuillez fournir la date de fin de la période.
                </div>
              </div>
            </div>


            <div class="row col-md-12 p-4">
              <label for="professor"><em>Enseignant :</em></label>
              <select
                class="form-select form-control"
                aria-label="Default select example"
                id="professor"
                name="professor"
              >
                <option selected>Ouvrir pour selectionner un Enseignant</option>
                <% if (professors.length > 0 ) { %> <% professors.forEach(function(professor){ %>
                  <option value="<%= professor._id %>"><%= `${professor.firstName} ${professor.lastName}` %></option>
                  <% }); %> 
                  <% } %>
    
              </select>
              <div class="invalid-feedback">
                Veuillez choisir un enseignant.
              </div>
            </div>
            <div id="calendar">
            <!-- le calendrier de fullcalendar-->
            <!-- le calendrier de fullcalendar-->
            </div>

            
            <div class="text-center">
              <button type="submit" class="btn btn-primary" id="add-non-availibility-btn">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form>
          <!-- End No Labels Form -->
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
